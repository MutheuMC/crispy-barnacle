<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Equipment Item list View -->
      <record id="view_equipment_item_list" model="ir.ui.view">
        <field name="name">equipment.item.list</field>
        <field name="model">equipment.item</field>
        <field name="arch" type="xml">
        <list string="Equipment Items" multi_edit="1" sample="1">
            <field name="barcode" optional="show" widget="badge"/>
            <field name="name"/>
            <field name="category_id"/>
            <field name="location_id"/>
            <field name="custodian_id" optional="hide"/>
            <field name="state"
                decoration-success="state=='available'"
                decoration-info="state=='borrowed'"
                decoration-warning="state in ('maintenance','repair')"
                decoration-danger="state=='lost'"
                widget="badge"/>
            <field name="condition" optional="hide"/>
            <field name="serial_number" optional="hide"/>
            <field name="manufacturer" optional="hide"/>
            <field name="model" optional="hide"/>
            <field name="purchase_date" optional="hide"/>
            <field name="warranty_active" optional="hide" widget="boolean_toggle"/>
            <field name="company_id" groups="base.group_multi_company" optional="hide"/>
        </list>
        </field>
    </record>

    <!-- Equipment Item Form View -->
    <record id="view_equipment_item_form" model="ir.ui.view">
        <field name="name">equipment.item.form</field>
        <field name="model">equipment.item</field>
        <field name="arch" type="xml">
            <form string="Equipment Item">
                <header>

                  <button name="action_open_assign_wizard" string="Assign" type="object"
                        class="btn-secondary"
                        invisible="holder_type != 'none' or state in ('borrowed','maintenance','retired','lost')"
                        groups="equipment_management.group_equipment_manager"/>

                <button name="action_open_unassign_wizard" string="Unassign" type="object"
                        invisible="holder_type == 'none' or state == 'borrowed'"
                        groups="equipment_management.group_equipment_manager"/>

                    <button name="action_move_to_store" string="Move to Store" type="object"
                            groups="equipment_management.group_equipment_manager"
                            invisible="not (state in ['available','assigned','reserved','maintenance'])"/>
                    
                    <button name="action_borrow" string="Borrow" type="object" class="oe_highlight"
                            invisible="state not in ('available','reserved')"
                            groups="equipment_management.group_equipment_user"/>

                    <button name="action_return" string="Return" type="object" class="oe_highlight"
                            invisible="state != 'borrowed'"
                            groups="equipment_management.group_equipment_user"/>

                    <button name="action_schedule_maintenance" string="Schedule Maintenance"
                            type="object" groups="equipment_management.group_equipment_manager"/>

                    <button name="action_print_barcode_label" string="Print Label"
                            type="object" groups="equipment_management.group_equipment_user"/>

                    <button name="mark_as_lost" string="Mark as Lost" type="object"
                            confirm="Are you sure you want to mark this equipment as lost?"
                            invisible="state not in ('borrowed','available')"
                            groups="equipment_management.group_equipment_manager"/>

                    <button name="mark_as_found" string="Mark as Found" type="object"
                            invisible="state != 'lost'"
                            groups="equipment_management.group_equipment_manager"/>

                    <button name="retire_equipment" string="Retire" type="object"
                            confirm="Are you sure you want to retire this equipment?"
                            groups="equipment_management.group_equipment_manager"/>

                    <field name="state" widget="statusbar"
                            statusbar_visible="available,borrowed,reserved,maintenance,repair,retired,lost"/>
                </header>

                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_loans" type="object" 
                                class="oe_stat_button" icon="fa-history">
                            <field name="loan_count" widget="statinfo" string="Loans"/>
                        </button>
                        <button name="action_view_attachments" type="object" 
                                class="oe_stat_button" icon="fa-files-o">
                            <field name="attachment_count" widget="statinfo" string="Documents"/>
                        </button>
                        <button name="toggle_active" type="object" 
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" 
                                   options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <field name="image_1920" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., HP Monitor 24 inch"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="category_id" options="{'no_create': True}"/>
                            <!-- <field name="barcode" widget="barcode_handler"/> -->
                            <field name="serial_number"/>
                            <field name="asset_tag"/>
                            <field name="model_number"/>
                        </group>
                        <group>
                            <field name="location_id"/>
                            <field name="custodian_id" options="{'no_create': True}"/>
                            <field name="responsible_id"/>
                            <field name="company_id" groups="base.group_multi_company"/>
                        </group>
                    </group>
                    
                    <!-- QR Code Display -->
                    <group string="QR Code" name="qr_code_group">
                        <field name="qr_code_image" widget="image" 
                               options="{'size': [200, 200]}" nolabel="1"/>
                        <div class="text-muted">
                            Scan this QR code to quickly access this equipment
                        </div>
                    </group>
                    
                    <notebook>
                        <page string="Equipment Details" name="details">
                            <group>
                                <group string="Technical Information">
                                    <field name="manufacturer"/>
                                    <field name="model"/>
                                    <field name="model_year"/>
                                    <field name="weight"/>
                                    <field name="dimensions"/>
                                    <field name="color"/>
                                </group>
                                <group string="Condition">
                                    <field name="condition" widget="badge"/>
                                    <field name="condition_notes"/>
                                </group>
                            </group>
                            <separator string="Technical Specifications"/>
                            <field name="specifications" placeholder="Enter detailed technical specifications..."/>
                        </page>

                        <page string = "Assignment information" name="assign">
                        <group string="Assignment">
                                <group>
                                    <field name="holder_type"/>
                                    <field name="employee_id"
                                        invisible="holder_type != 'employee'"
                                        required="holder_type == 'employee'"/>
                                    <field name="department_id"
                                        string="Department/Unit"
                                        invisible="holder_type != 'department'"
                                        required="holder_type == 'department'"/>
                                    <field name="custodian_partner_id"
                                        string="External Custodian"
                                        invisible="holder_type != 'other'"
                                        required="holder_type == 'other'"/>
                                    <field name="assigned_date"
                                        invisible="holder_type == 'none'"
                                        required="holder_type != 'none'"/>
                                </group>
                                </group>
                        </page>
                        
                        <page string = "Assignment History" name="assign">
                        <field name="assignment_ids" readonly="1" >
                                <list>
                                    <field name="holder_type"/>
                                    <field name="employee_id" optional="show"/>
                                    <field name="department_id" optional="show"/>
                                    <field name="custodian_partner_id" optional="show"/>
                                    <field name="assigned_date"/>
                                    <field name="unassigned_date"/>
                                    <field name="assigned_by_id"/>
                                    <field name="location_id"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Purchase Information" name="purchase">
                            <group>
                                <group>
                                    <field name="purchase_date"/>
                                    <field name="purchase_value"/>
                                    <field name="currency_id" invisible="1"/>
                                    <field name="vendor_id"/>
                                    <field name="purchase_order_id"/>
                                </group>
                                <group string="Warranty">
                                    <field name="warranty_start_date"/>
                                    <field name="warranty_end_date"/>
                                    <field name="warranty_active" widget="boolean"/>
                                </group>
                            </group>
                        </page>
                        
                        <page string="Loan History" name="loans">
                            <field name="loan_ids" readonly="1">
                                <list decoration-danger="state=='overdue'" 
                                      decoration-success="state=='returned'">
                                    <field name="name"/>
                                    <field name="borrower_id"/>
                                    <field name="borrow_date"/>
                                    <field name="due_date"/>
                                    <field name="return_date"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Maintenance" name="maintenance">
                            <group>
                                <field name="next_maintenance_date"/>
                            </group>
                            <field name="maintenance_ids">
                                <list>
                                    <field name="maintenance_type"/>
                                    <field name="scheduled_date"/>
                                    <field name="completed_date"/>
                                    <field name="technician_id"/>
                                    <field name="cost"/>
                                    <field name="state" widget="badge"/>
                                </list>
                            </field>
                        </page>
                        
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional information, usage guidelines, special instructions..."/>
                        </page>
                    </notebook>
                </sheet>
                <chatter>
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </chatter>
            </form>
        </field>
    </record>
    <!-- Equipment Item Kanban View -->
    <record id="view_equipment_item_kanban" model="ir.ui.view">
        <field name="name">equipment.item.kanban</field>
        <field name="model">equipment.item</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile" sample="1">
                <field name="id"/>
                <field name="name"/>
                <field name="barcode"/>
                <field name="category_id"/>
                <field name="location_id"/>
                <field name="state"/>
                <field name="image_128"/>
                <field name="custodian_id"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_image">
                                <img t-att-src="kanban_image('equipment.item', 'image_128', record.id.raw_value)" 
                                     alt="Equipment" class="o_image_64_cover"/>
                            </div>
                            <div class="oe_kanban_details">
                                <strong class="o_kanban_record_title">
                                    <field name="name"/>
                                </strong>
                                <div class="o_kanban_record_subtitle">
                                    <field name="barcode" widget="badge"/>
                                </div>
                                <div>
                                    <field name="category_id"/>
                                </div>
                                <div>
                                    <i class="fa fa-map-marker"/> <field name="location_id"/>
                                </div>
                                <div t-if="record.custodian_id.value">
                                    <i class="fa fa-user"/> <field name="custodian_id"/>
                                </div>
                                <div class="mt-2">
                                    <field name="state" widget="badge" 
                                           decoration-success="state=='available'" 
                                           decoration-info="state=='borrowed'"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Equipment Item Search View -->
    <record id="view_equipment_item_search" model="ir.ui.view">
        <field name="name">equipment.item.search</field>
        <field name="model">equipment.item</field>
        <field name="arch" type="xml">
            <search string="Search Equipment">
                <field name="name" string="Equipment" 
                       filter_domain="['|', '|', '|', ('name', 'ilike', self), ('barcode', 'ilike', self), ('serial_number', 'ilike', self), ('asset_tag', 'ilike', self)]"/>
                <field name="barcode"/>
                <field name="category_id"/>
                <field name="location_id"/>
                <field name="custodian_id"/>
                <field name="manufacturer"/>
                
                <filter string="Available" name="available" domain="[('state', '=', 'available')]"/>
                <filter string="Borrowed" name="borrowed" domain="[('state', '=', 'borrowed')]"/>
                <filter string="Under Maintenance" name="maintenance" domain="[('state', 'in', ['maintenance', 'repair'])]"/>
                <filter string="Under Warranty" name="under_warranty" domain="[('warranty_active', '=', True)]"/>
                
                <separator/>
                <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                
                <separator/>
                <filter string="My Equipment" name="my_equipment" 
                        domain="[('custodian_id', '=', uid)]"/>
                <filter string="My Responsibility" name="my_responsibility" 
                        domain="[('responsible_id', '=', uid)]"/>
                
                <group expand="0" string="Group By">
                    <filter string="Category" name="group_category" context="{'group_by': 'category_id'}"/>
                    <filter string="Location" name="group_location" context="{'group_by': 'location_id'}"/>
                    <filter string="Status" name="group_state" context="{'group_by': 'state'}"/>
                    <filter string="Custodian" name="group_custodian" context="{'group_by': 'custodian_id'}"/>
                    <filter string="Condition" name="group_condition" context="{'group_by': 'condition'}"/>
                </group>
                
                <searchpanel>
                    <field name="category_id" icon="fa-tag" enable_counters="1"/>
                    <field name="location_id" icon="fa-map-marker" enable_counters="1"/>
                    <field name="state" icon="fa-info-circle" enable_counters="1" select="multi"/>
                </searchpanel>
            </search>
        </field>
    </record>

    <!-- Equipment Item Action -->
    <record id="action_equipment_item" model="ir.actions.act_window">
        <field name="name">Equipment Items</field>
        <field name="res_model">equipment.item</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{
            'search_default_available': 0,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add your first equipment item
            </p>
            <p>
                Track all your lab equipment with QR codes for easy borrowing and management.
            </p>
        </field>
    </record>

    <!-- Barcode Scanning Action -->
    <record id="action_equipment_barcode_scan" model="ir.actions.client">
        <field name="name">Scan Equipment</field>
        <field name="tag">equipment_barcode_scanner</field>
        <field name="target">fullscreen</field>
    </record>

</odoo>