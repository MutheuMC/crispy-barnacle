<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Location list View -->
    <record id="view_equipment_location_list" model="ir.ui.view">
        <field name="name">equipment.location.list</field>
        <field name="model">equipment.location</field>
        <field name="arch" type="xml">
            <list string="Equipment Locations">
                <field name="complete_name"/>
                <field name="code"/>
                <field name="location_type"/>
                <field name="building"/>
                <field name="floor"/>
                <field name="room"/>
                <field name="responsible_id"/>
                <field name="equipment_count"/>
            </list>
        </field>
    </record>

    <!-- Location Form View -->
    <record id="view_equipment_location_form" model="ir.ui.view">
        <field name="name">equipment.location.form</field>
        <field name="model">equipment.location</field>
        <field name="arch" type="xml">
            <form string="Equipment Location">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_equipment" type="object" 
                                class="oe_stat_button" icon="fa-cube">
                            <field name="equipment_count" widget="statinfo" string="Equipment"/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="e.g., Main Laboratory"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="parent_id"/>
                            <field name="location_type"/>
                            <field name="responsible_id"/>
                        </group>
                        <group string="Address Details">
                            <field name="building"/>
                            <field name="floor"/>
                            <field name="room"/>
                        </group>
                    </group>
                    
                    <group string="Full Address">
                        <field name="address" nolabel="1" placeholder="Complete address..."/>
                    </group>
                    
                    <notebook>
                        <page string="GPS Coordinates" name="coordinates">
                            <group>
                                <group>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                </group>
                            </group>
                        </page>
                        <page string="Sub-locations" name="sublocations">
                            <field name="child_ids">
                                <list>
                                    <field name="name"/>
                                    <field name="code"/>
                                    <field name="location_type"/>
                                    <field name="equipment_count"/>
                                </list>
                            </field>
                        </page>
                        <page string="Notes" name="notes">
                            <field name="notes" placeholder="Additional notes about this location..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>